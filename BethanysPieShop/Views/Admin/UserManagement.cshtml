@model IEnumerable<IdentityUser>

<h2>User management</h2>

@if (!Model.Any())
{
    <tr><td colspan="3" class="text-center">No User Accounts</td></tr>
}
else
{
    <table class="table table-condensed table-bordered" header header-content="User Management">
        <tr>
            <th>User ID</th>
            <th>User name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>

        @foreach (IdentityUser user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
            </tr>
        }
    </table>
}

<p>
    @*<a class="btn btn-primary" asp-action="AddUser">Add new user</a>*@
    <a anchor-style="primary" asp-action="AddUser">Add new user</a>
</p>